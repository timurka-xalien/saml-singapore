  </connectionStrings>
  <appSettings>
    <add key="webpages:Version" value="3.0.0.0"/>
    <add key="webpages:Enabled" value="false"/>
    <add key="ClientValidationEnabled" value="true"/>
    <add key="UnobtrusiveJavaScriptEnabled" value="true"/>
  </appSettings>
  <!--
    For a description of web.config changes see http://go.microsoft.com/fwlink/?LinkId=235367.

    The following attributes can be set on the <httpRuntime> tag.
      <system.Web>
        <httpRuntime targetFramework="4.5" />
      </system.Web>
  -->
  <system.web>
    <!--<authentication mode="None" />-->
    <compilation debug="true" targetFramework="4.5">
      <!--<assemblies>
        <add assembly="System.IdentityModel.Services"/>
      </assemblies>-->
    </compilation>
    <httpRuntime targetFramework="4.5"/>
    <httpModules>
      <add name="ApplicationInsightsWebTracking" type="Microsoft.ApplicationInsights.Web.ApplicationInsightsHttpModule, Microsoft.AI.Web"/>
    </httpModules>
    <customErrors mode="Off"/>
  </system.web>
  <system.webServer>
    <modules>
      <remove name="FormsAuthentication"/>
      <remove name="ApplicationInsightsWebTracking"/>
      <add name="ApplicationInsightsWebTracking" type="Microsoft.ApplicationInsights.Web.ApplicationInsightsHttpModule, Microsoft.AI.Web" preCondition="managedHandler"/>
      <add name="SessionAuthenticationModule" type="System.IdentityModel.Services.SessionAuthenticationModule, System.IdentityModel.Services, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" preCondition="managedHandler"/>
    </modules>
    <validation validateIntegratedModeConfiguration="false"/>
  </system.webServer>
  <sustainsys.saml2 entityId="https://xsamltest.azurewebsites.net/Saml2" returnUrl="https://xsamltest.azurewebsites.net/">
    <!--Buttons are hardcoded in SamlIdentityProvidersRepository!!!!!!!!!!!!!!-->
    <identityProviders>
      <!--Sustainsys Test-->
      <add entityId="https://stubidp.sustainsys.com/Metadata" signOnUrl="https://stubidp.sustainsys.com/" logoutUrl="https://stubidp.sustainsys.com/Logout" allowUnsolicitedAuthnResponse="true" binding="HttpRedirect">
        <signingCertificate fileName="~/Certificates/stubidp.sustainsys.com.cer"/>
      </add>
      <!--Okta-->
      <add entityId="http://www.okta.com/exk3if4eGO9UX2eme355" metadataLocation="~/Metadata/okta.xml" allowUnsolicitedAuthnResponse="true" loadMetadata="true"/>
      <!--Azure AD-->
      <add entityId="https://sts.windows.net/eb1e0391-b3de-41cd-983f-661a7c31aff5/" metadataLocation="~/Metadata/Azure AD.xml" allowUnsolicitedAuthnResponse="true" loadMetadata="true"/>
      <!--OneLogin-->
      <add entityId="https://app.onelogin.com/saml/metadata/754212" signOnUrl="https://wrety-dev.onelogin.com/trust/saml2/http-post/sso/754212" logoutUrl="https://wrety-dev.onelogin.com/trust/saml2/http-redirect/slo/754212" allowUnsolicitedAuthnResponse="true" binding="HttpRedirect">
        <signingCertificate fileName="~/Certificates/onelogin.pem"/>
      </add>
    </identityProviders>
    <serviceCertificates>
      <add fileName="~/Certificates/sp.certificate.pfx"/>
      <!--Example of configuring Sustainsys to get service certificate from Certificate Store: -->
      <!--<add storeName="My" storeLocation="LocalMachine" findValue="CumulusPro SAML Prototype" x509FindType="FindBySubjectName" />-->
    </serviceCertificates>
  </sustainsys.saml2>
  <system.identityModel.services>
    <federationConfiguration>
      <cookieHandler requireSsl="false" name="SampleMvcApplicationAuth"/>
    </federationConfiguration>
  </system.identityModel.services>
  <system.identityModel>
    <identityConfiguration>
      <claimsAuthenticationManager type="CumulusPro.Saml.Prototype.Services.SamlClaimsAuthenticationManager, CumulusPro.Saml.Prototype"/>
      <securityTokenHandlers>
        <add type="System.IdentityModel.Services.Tokens.MachineKeySessionSecurityTokenHandler, System.IdentityModel.Services, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089"/>
        <remove type="System.IdentityModel.Tokens.SessionSecurityTokenHandler, System.IdentityModel, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089"/>
      </securityTokenHandlers>
    </identityConfiguration>
  </system.identityModel>
